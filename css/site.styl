@import "syntax";
// @media query variables
$lessThanTablet = "screen and (max-width: " + unit(700 / 16, em) + ")";


// ====
// HEADER
// ================================================================================
header[role="banner"] {
  prop(padding, $baseGutter / 2 0);
  .wrapper {
    position: relative;
  }

  a {text-decoration: none;}
}  
// Brand
.site-brand {
  display: block;
  typeRhythm(1); 
  font-weight: bold;
  text-align: center;
  vertical-align: middle;
}
// Navigation
.site-nav {
  
}
.nav-tabs {
  margin-top: 0;
  padding: 0;
  list-style: none;
  vertical-align: middle;
  text-align: center;

  .tab {
    display: block;

    a {
      display: block;
    }
  }
}
// Hide .nav-toggle
.nav-toggle {
  display: none;
  width: auto;
  cursor: pointer;
}
.toggle-control {position: absolute;}

