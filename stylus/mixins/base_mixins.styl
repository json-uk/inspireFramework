// Arrows
arrow(
  dir = up,
  width = 6px,
  colour = $text,
) {
  display: inline-block;
  width: 0;
  height: 0;
  prop(border, width, solid transparent);
  if (dir == up) {
    border-top: none;
    border-bottom-color: colour;
  }else if (dir == right) {
    border-right: none;
    border-left-color: colour;
  }else if (dir == down) {
    border-bottom: none;
    border-top-color: colour;
  }else {
    border-right: none;
    border-left-color: colour;
  }
  vertical-align: bottom
}
