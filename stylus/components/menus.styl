// Menus
// ================================================================================
.menu {
  position: absolute;
  right: 0;
  height: 0;
  overflow: hidden;
  opacity: 0;
  margin-top: 0;
  prop('padding',6px 0);
  list-style: none;
  
  a {
    display: block;
    prop('padding', 6px 12px);
    border: none;
    text-decoration: none;
  }
}

.active + .menu {
  opacity: 1;
  height: auto;
}