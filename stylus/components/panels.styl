// ====
// Panels
// ================================================================================
.if-panel {
  // Transparent border for use with the 'bordered' utility
  borderRadius($baseGutter / 6);
  prop('border', 1px, solid transparent);
  modulePadding($baseGutter - 1);
  background: $panelBg;
  
  // Panel Utility Classes
  // =================================================
  &.inset {
    boxShadow(inset 0 1px 1px 0 $mediumGrey);
    background: $panelInsetBg;
  }
  &.bordered {
    border-color: $panelBorder;  
  }
  &.raised {
    prop('border-bottom-color', $panelRaisedBorder); 
    boxShadow(0 2px 0 0 $panelRaisedBorder); 
  }
  & + .if-panel {
    @extend .baseline_margin;
  }
}
.if-panel-header, .if-panel-footer {
  prop(margin-right, -($baseGutter));
  prop(margin-left, -($baseGutter));
  prop(padding-right, $baseGutter);
  prop(padding-left, $baseGutter);
}
.if-panel-header {
  prop(margin-top, -($baseGutter / 2));
  prop(margin-bottom, $baseGutter - 1);
  if $incluePanelHeadBorder is true {
    prop('border-bottom',1px,solid $panelHeadBorder);
  }
  prop(padding, 0 $baseGutter $baseGutter / 2);
  * {margin: 0;}
}

.if-panel-footer {
  position: relative;
  prop('margin-top', $baseGutter - 1);
  prop('margin-bottom', -($baseGutter / 2));
  prop('border-top', 1px, solid $panelFootBorder);    
  prop('padding-top', $baseGutter / 2);
}


// Notification Panels
// =================================================
.is_notification {
  width: auto;`

  &.info {
    if $panelInfoBackground is defined {
      background: $panelInfoBackground;
      color: darken($panelInfoBackground, 40%);
    }else{
      frameworkWarning('$panelInfoBackground var is missing in your theme!');
    }
  }
