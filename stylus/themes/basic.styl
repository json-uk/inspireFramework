// Theme - Basic
// ============================================

// Theme Variables
// =================================================
$baseFontStack = $helvetica; // see font-families in mixins/base_mixins.styl
$globalBorderRadius = 6px;
$raisedBorderWidth = 3px;

//prop('padding',($baseGutter / 2) $baseGutter ($baseGutter / 2) ($baseGutter .25));

// Grid Lines Colour
// set the colour of grid lines when dev-mode == true
// =================================================
$gridLinesColour = '';



// Main Colour
// =================================================
$primaryColour = #34D1C6;
    
// Complementary Colors
$complementaryColour = spin($primaryColour,180);
// Split Complementary
$splitComplementaryA = spin($primaryColour,150);
$splitComplementaryB = spin($primaryColour,-150);

// Triadic
// Analogous
// Monochromatic
// $primaryColourLighter = lighten();
// $primaryColourDarker = ''; 


// Basic Colours
// =================================================
$bodyBg = $lightGrey;
$text = #0B0B0B;
$textInverted = invert($text);
// Colour variables
$darkGrey = lighten($text,40%);
$mediumGrey = saturate(darken($textInverted,50%),10%);
$grey = darken($textInverted,25%);
$lightGrey = $textInverted;

// Links
$link = $primaryColour;
$linkHover = $splitComplementaryA;
$linkActive = #2559A5;
$linkFocus = #3682F2;
$linkVisited = #1C4861;

// Button Colours
$primaryAction = $primaryColour;
$primaryActionText = $textInverted;
$secondaryAction = $splitComplementaryA;
$utilityAction = $splitComplementaryB;

// ====
// Forms
// ================================================================================
$fieldBorderWidth = 2px;
$fieldBorderColour = $grey;
$fieldFocusBorderColour = darken($primaryColour, 20%);
$fieldBackground = white;
$fieldActiveBackground = $lightGrey;
// ====
// Button Theme Settings
// ================================================================================
$buttonBorderWidth = 0 0 $raisedBorderWidth;


// ====
// Element Overrides
// ================================================================================

// Blockquotes
$blockquoteBorderWidth = 2px;
$blockquoteBorderStyle = dashed;
$blockquoteBorderColour = $grey;
$blockquotePadding = $baseGutter;
$blockquoteBlockColour = $complementaryColour;

// Basic Blockquote Mixin
blockquoteBasicSettings() {
  prop(margin, $baseGutter);
  prop(padding, $blockquotePadding);
  font-size: 120%;
}
// Blockquote Border Mixin
// Includes padding adjustment for border widths
blockquoteBorder() {
  prop(border-left, $blockquoteBorderWidth, $blockquoteBorderStyle $blockquoteBorderColour);
  prop(padding-left, $blockquotePadding - $blockquoteBorderWidth);
}

// Blockquote Quotation Mixin
// @param isGlyph false|true, if true will return the alternate pseudo element styles
// and will use data-glyph-before and data-*-after content.

blockquoteQuotation() {
  prop(padding-left, $blockquotePadding);
  prop(padding-right, $blockquotePadding);
  font-size: 110%;
  color: $complementaryColour;
  text-align: center;
  vertical-align: middle;

  &:before, &:after {
    display: inline-block;
    opacity: .1;
    position: absolute;
    top: auto;
    right: 0;
    left: 0;
    width: 100%;
    height: 50%;
    font-size: 800%;
    font-family: $decorative;
    line-height: 1;
    color: $grey;
    z-index: -1;
  }
  &:before {
    top: 0;
    text-align: left;
    content: open-quote;
  }
  &:after {
    right: 0;
    text-align: right;
    prop(bottom, $blockquotePadding);

    content: close-quote;
  }
}

// Citation Mixins
citation() { 
  font-size: 75%;
  color: $grey;
  &:before, &:after {
    content: ' - ';
  }
  a {color: $link;}
}

// Component Theme Settings
// =================================================

// Panels
// =================================================
$panelBg = #fff;
$panelInsetBg = darken($bodyBg,5%);
$panelBorder = darken($lightGrey,10%);
$panelRaisedBorder = darken($lightGrey,10%);
$panelHeadBorder = darken($lightGrey, 5%);
$panelFootBorder = $panelHeadBorder;
